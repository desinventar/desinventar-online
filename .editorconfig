# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[makefile]
indent_style = tab
indent_size = 4

# Compatibility with old code
[web/js/**.js]
indent_style = tab
indent_size = 2

[web/css/**.css]
indent_style = tab
indent_size = 2
