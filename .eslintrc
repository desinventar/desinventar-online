{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:testcafe/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier", "testcafe", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true,
        "semi": false
      }
    ]
  }
}
